{
  "name": "automated-a11y-testing-js",
  "version": "1.0.0",
  "author": "Marcy Sutton",
  "description": "A demo application for the Automated Accessibility Testing with JavaScript workshop",
  "main": "src/index.js",
  "scripts": {
    "start": "parcel src/index.html --no-source-maps",
    "build": "parcel build",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run",
    "test:e2e": "start-server-and-test start http://localhost:1234 cypress:open",
    "test:ci": "start-server-and-test start http://localhost:1234 cypress:run",
    "test": "jest"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@parcel/transformer-sass": "2.4.0",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^14.2.0",
    "axe-core": "^4.3.5",
    "babel-jest": "^27.3.1",
    "cypress": "^10.0.3",
    "cypress-axe": "^0.13.0",
    "jest": "^27.3.1",
    "jest-transform-css": "^2.1.0",
    "parcel": "^2.4.0",
    "react-test-renderer": "^17.0.2",
    "start-server-and-test": "^1.14.0"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^/(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "cypress",
      "examples"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    }
  }
}
